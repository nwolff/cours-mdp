{% extends "base.j2" %}
{% block title %}Créer un compte{% endblock %}
{% block nav_register %}active{% endblock %}

{% block content %}
<div class="container d-flex justify-content-center align-items-center">
  <div class="card p-4 shadow" style="width: 100%; max-width: 380px">
    <div class="card-body">
      <h3 class="card-title text-center mb-4">Créer un compte</h3>
      {% if error %}
      <div class="alert alert-danger" role="alert">{{ error }}</div>
      {% endif %}
      <form action="" method="post">
        <div class="mb-3">
          <input type="text" placeholder="Nom" name="username" value="{{
          request.form.username }}" class="form-control" required minlength="{{min_chars}}" />
        </div>
        <div class="mb-3">
          <input type="password" placeholder="Mot de passe" name="password" value="{{
          request.form.password }}" class="form-control" required minlength="{{min_chars}}" />
        </div>
        <div class="mb-3">
          <label>Stratégie</label>
          <select class="form-control" name="strategy_name" required>
            <option disabled selected value> -- Choisir une option -- </option>
            {% for s_name in strategies.keys() %}
            <option value="{{s_name}}">{{s_name}}</option>
            {% endfor %}
          </select>
        </div>
        <div class="d-grid">
          <button type="submit" class="btn btn-primary">Créer</button>
        </div>
      </form>
    </div>
  </div>
</div>
{% endblock %}