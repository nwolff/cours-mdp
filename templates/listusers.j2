{% extends "base.j2" %}

{% block title %}Comptes{% endblock %}

{% block nav_listusers %}active{% endblock %}

{% block content %}
<h2>{{users|length}} Compte{{ users|length|pluralize }}</h2>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Mot de passe encodé</th>
      <th>Stratégie</th>
      <th>Date et heure de création</th>
    </tr>
  </thead>
  <tbody>
    {% for user in users %}
    <tr>
      <td>{{user.username}}</td>
      <td>{{user.password}}</td>
      <td>{{user.strategy}}</td>
      <td>{{user.timestamp}}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}